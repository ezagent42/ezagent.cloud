---
import PageLayout from '../../../layouts/PageLayout.astro';
import ShowcaseCard from '../../../components/ShowcaseCard.astro';
import { getCollection } from 'astro:content';
import { useTranslations, useTranslatedPath, type Lang } from '../../../i18n/ui';

export function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as Lang);
const tp = useTranslatedPath(lang as Lang);

const showcaseEntries = (await getCollection('showcase'))
  .filter(e => e.data.lang === lang);
---

<PageLayout title={t('nav.showcase')} description={t('sections.showcase_desc')} lang={lang}>
  <div class="content-page">
    <div class="content-inner">
      <h1 class="page-title">{t('sections.showcase')}</h1>
      <p class="page-desc">{t('sections.showcase_desc')}</p>
      <div class="showcase-grid">
        {showcaseEntries.map(entry => (
          <ShowcaseCard
            title={entry.data.title}
            description={entry.data.description}
            icon={entry.data.icon}
            tags={entry.data.tags}
            color={entry.data.color}
          />
        ))}
      </div>
    </div>
  </div>
</PageLayout>

<style>
  .content-page {
    padding: var(--sp-12) 0 var(--sp-16);
  }

  .content-inner {
    max-width: 840px;
    margin: 0 auto;
    padding: 0 var(--sp-6);
  }

  .page-title {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--ink);
    margin: 0 0 var(--sp-3);
  }

  .page-desc {
    font-size: 1.0625rem;
    color: var(--smoke);
    line-height: 1.8;
    margin: 0 0 var(--sp-8);
  }

  .showcase-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--sp-6);
  }

  @media (max-width: 768px) {
    .showcase-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
