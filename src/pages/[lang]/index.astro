---
import PageLayout from '../../layouts/PageLayout.astro';
import { useTranslations, type Lang } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    { params: { lang: 'zh' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as Lang);
---

<PageLayout title={t('site.title')} description={t('site.description')} lang={lang}>
  <section class="hero-placeholder">
    <h1>{t('hero.tagline')}<br />{t('hero.tagline2')}</h1>
    <p>{t('hero.subtitle')}</p>
  </section>
</PageLayout>

<style>
  .hero-placeholder {
    max-width: 1080px;
    margin: 0 auto;
    padding: var(--sp-24) var(--sp-6);
    text-align: center;
  }

  .hero-placeholder h1 {
    font-family: var(--font-brand);
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 700;
    letter-spacing: 0.05em;
    line-height: 1.3;
    color: var(--ink);
    margin: 0 0 var(--sp-6);
  }

  .hero-placeholder p {
    font-size: 1.0625rem;
    color: var(--ink-light);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.8;
  }
</style>
