---
interface Props {
  title: string;
  description: string;
  icon: string;
  code?: string;
  available: boolean;
}

const { title, description, icon, code, available } = Astro.props;
---

<div class:list={['download-card', { 'coming-soon': !available }]}>
  <i class={icon}></i>
  <h3>{title}</h3>
  <p>{description}</p>
  {code && <pre><code>{code}</code></pre>}
  {!available && <span class="badge">Coming Soon</span>}
</div>

<style>
  .download-card {
    background: var(--bg);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
    padding: var(--sp-8);
    text-align: center;
  }

  .download-card.coming-soon {
    opacity: 0.65;
  }

  .download-card i {
    font-size: 2rem;
    color: var(--celadon);
    margin-bottom: var(--sp-4);
    display: block;
  }

  h3 {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 var(--sp-2);
    color: var(--ink);
  }

  p {
    font-size: 0.875rem;
    color: var(--ink-light);
    margin: 0 0 var(--sp-4);
    line-height: 1.7;
  }

  pre {
    background: var(--surface-inv);
    color: var(--surface-inv-text);
    padding: var(--sp-3) var(--sp-4);
    border-radius: var(--radius-sm);
    font-family: var(--font-code);
    font-size: 0.8125rem;
    overflow-x: auto;
    text-align: left;
  }

  .badge {
    display: inline-block;
    font-size: 0.6875rem;
    font-weight: 600;
    padding: 3px 10px;
    border-radius: var(--radius-sm);
    background: rgba(201, 165, 90, 0.08);
    color: var(--gold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
